<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a252b"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-190px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backgroundmain" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="308dp"
        android:layout_height="632dp"
        android:layout_marginTop="-180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/walk_it_png" />

    <EditText
        android:id="@+id/EmailReg"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:layout_marginTop="256dp"
        android:background="@drawable/roundcorner"
        android:ems="10"
        android:fontFamily="@font/segoe_ui"
        android:hint="E-mail adress"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#828282"
        android:textColorHint="#828282"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/PasswordReg"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/roundcorner"
        android:ems="10"
        android:fontFamily="@font/segoe_ui"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#828282"
        android:textColorHint="#828282"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/EmailReg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/EmailReg"
        app:layout_constraintTop_toBottomOf="@+id/EmailReg" />

    <EditText
        android:id="@+id/passwordConfirm"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/roundcorner"
        android:ems="10"
        android:fontFamily="@font/segoe_ui"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#828282"
        android:textColorHint="#828282"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/PasswordReg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/PasswordReg"
        app:layout_constraintTop_toBottomOf="@+id/PasswordReg" />

    <TextView
        android:id="@+id/TOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:fontFamily="@font/segoe_bold"
        android:text="Do you agree with our terms and conditions?"
        android:textColor="#91CDDA"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/passwordConfirm"
        app:layout_constraintStart_toStartOf="@+id/passwordConfirm"
        app:layout_constraintTop_toBottomOf="@+id/passwordConfirm"
        app:layout_constraintVertical_bias="0.392" />

    <TextView
        android:id="@+id/restPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="#325961"
        android:fontFamily="@font/segoe_bold"
        android:paddingLeft="40dp"
        android:paddingTop="3dp"
        android:paddingRight="40dp"
        android:paddingBottom="3dp"
        android:text="Register"
        android:textColor="#91CDDA"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/TOS"
        app:layout_constraintStart_toStartOf="@+id/TOS"
        app:layout_constraintTop_toBottomOf="@+id/TOS"
        app:layout_constraintVertical_bias="0.216" />

    <CheckBox
        android:id="@+id/agreeCheckBox"
        android:layout_width="30dp"
        android:layout_height="33dp"
        android:buttonTint="#91CDDA"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="@+id/TOS"
        app:layout_constraintEnd_toStartOf="@+id/TOS"
        app:layout_constraintTop_toTopOf="@+id/TOS" />

</androidx.constraintlayout.widget.ConstraintLayout>